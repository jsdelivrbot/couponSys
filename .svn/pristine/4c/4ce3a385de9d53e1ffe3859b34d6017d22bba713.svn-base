    .el-form-item{
        margin-bottom: 10px;
    }
}
.avatar-uploader{
    .el-upload {
      border: 1px dashed #d9d9d9;
      border-radius: 6px;
      cursor: pointer;
      position: relative;
      overflow: hidden;
    }
    .el-upload:hover {
      border-color: $mainColor
    }
    .avatar {
      width: 148px;
      height: 148px;
      display: block;
    }
}
.avatar-uploader 
